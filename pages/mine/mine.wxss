/* pages/mine/mine.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.nav-list {
  margin: 30rpx 0;
}

.nav-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1px solid #ededed;
  background: white;
}

.nav-list :last-child {
  border-bottom: 0;
}

.nav-title {
  display: flex;
  align-items: center;
}

.nav-title text {
  font-size: 32rpx;
  margin-left: 32rpx;
}

.footer {
  height: 100%;
}

button {
  width: 600rpx;
  margin: 0 auto;
}
