/* pages/category/category.wxss */
.container {
  height: 100%;
}
.main-box {
  width: 100%;
  height: 100%;
  display: flex;
}

.side-tab {
  border-right: 1px solid #ededed;
  width: 180rpx;
  min-width: 180rpx;
  height: 100%;
}

.side-tab .tab-item {
  position: relative;
  height: 110rpx;
  background-color: #f8f8f8;
  border-left: 8rpx solid #f8f8f8;
  border-bottom: 1px solid #ededed;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.side-tab .tab-item-selected {
  border-left: 4px solid #09bb07;
  background-color: #fff;
}

.side-tab .tab-item .tab-num {
  position: absolute;
  right: 5px;
  top: 5px;
}

.cate-box {
  flex: 1;
  height: 100%;
}

.cate-title {
  height:30px;
  line-height: 30px;
  padding-left:20rpx;
  border-bottom:1px solid #ededed;
}

.cate-title text {
  color: #626e7a;
}

.goods-list {
  background-color: #fff;
  padding-left: 10px;
}

.goods-item {
  padding: 10px 15px 10px 0;
  border-bottom: 1px solid #ededed;
}

.goods-item .goods-image {
  width: 70px;
  height: 70px;
}

.goods-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.goods-name text {
  font-size: 32rpx;
}

.goods-desc text {
  font-size: 24rpx;
  color: #a3a3a3;
}

.goods-price {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.goods-price .price-box .price-unit {
  color: #ff6200;
  font-size: 26rpx;
}

.goods-price .price-box .price-text {
  color: #ff6200;
  font-size: 32rpx;
}

.quantity .number {
  font-size: 26rpx;
  min-width: 25px;
  text-align: center;
}

.float-cart-box {
  position: fixed;
  bottom: 10px;
  right: 10px;
}

.float-cart-box .cart-icon {
  font-size: 46px;
  background-color: white;
  width: 45px;
  height: 45px;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 0 0 5px gray;
}
